    <link href="~/Content/SiteDigital.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/datepicker/bootstrap-datepicker3.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/sweetalert2.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/datepicker/locales/bootstrap-datepicker.es.min.js"></script>
    <style>
        /*.header {
            overflow: hidden;
            height: 96px;
            padding: 20px 10px;
            background: #002B76;
            color: white;
        }*/

        /*registro*/
        .conteRegistro {
            /*position: absolute;*/
            /*width: 759px;*/
            /*height: 654px;*/
            left: 534px;
            top: 229px;
            border: 1px solid #DADCE0;
            box-sizing: border-box;
            border-radius: 20px;
            margin: auto;
        }
        /*ss*/

        body {
            /* display: grid;*/
            /*font-family: Arial, sans-serif;*/
            /*grid-gap: 1rem;*/
            grid-template-areas:
                "header header"
                "sidebar main";
            /*  grid-template-columns: 277px auto;
            grid-template-rows: auto 100vh;*/
            /*grid-template-rows: 96px 100vh;*/
        }

        .o-header {
            background: #ffff;
            grid-area: header;
            padding: 20px 10px;
            /*grid-area: header;
            padding: 1.5rem;*/
        }

        .o-sidebar {
            background: rgba(0, 43, 118, 0.1);
            grid-area: sidebar;
        }

        .o-main {
            background: rgba(0, 43, 118, 0.1);
            grid-area: main;
        }

        /*estilos nuevos*/
        .p-100-0 {
            padding: 100px
        }

        .oculta {
            display: block;
        }

        @@media (max-width: 1044px) {
            .p-100-0 {
                padding: 70px 10px 10px 10px;
            }
        }

        @@media (max-width: 808px) {

            body {
                display: grid;
                /*font-family: Arial, sans-serif;*/
                /*grid-gap: 1rem;*/
                grid-template-areas:
                    "header header"
                    "sidebar main";
                grid-template-columns: 100px auto;
                /*grid-template-rows: auto 100vh;*/
                /*grid-template-rows: 96px 100vh;*/
            }

            .oculta {
                display: none;
            }
        }

        @@media (max-width: 720px) {
            .p-100-0 {
                padding: 70px 0px 0px 0px;
            }

            body {
                display: grid;
                /*font-family: Arial, sans-serif;*/
                /*grid-gap: 1rem;*/
                grid-template-areas:
                    "header header"
                    "sidebar main";
                grid-template-columns: 10px auto;
                /*grid-template-rows: auto 100vh;*/
                /*grid-template-rows: 96px 100vh;*/
            }

            .wi-100 {
                width: 500px;
            }
        }

        @@media (max-width: 504px) {
            .wi-100 {
                width: 400px;
            }
        }

        @@media (max-width: 404px) {
            .wi-100 {
                width: 300px;
            }
        }

        @@media (max-width: 304px) {
            .wi-100 {
                width: 200px;
            }
        }
        /*fin de estilos*/
    </style>
</head>
<body>
    <div class="o-header header">
        <div class="logo">
            <a class="navbar-brand" href="#">
                <img src="~/Content/imagenes/Banners/gamlp.png" alt="logo del sitio" width="150">
