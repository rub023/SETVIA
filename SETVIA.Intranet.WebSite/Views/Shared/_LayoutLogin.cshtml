                    <div class="p-100-0" style=" margin-left: 139px; margin-right: 96px;">
                        <div class="conteRegistro">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-0"></div>
            </div>
        </div>
    </main>
    @RenderSection("scripts", required: false)
